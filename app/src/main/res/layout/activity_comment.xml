<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fonnditt.mobile_perfect.founditt.CommentActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout"
        android:background="@drawable/home_banner">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/fillter_commentimageButton"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/menu"
            android:background="@null" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/search_commentimageButton"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/fillter_commentimageButton"
            android:layout_toStartOf="@+id/fillter_commentimageButton"
            android:background="@null"
            android:src="@drawable/search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Comment"
            android:id="@+id/commnet_title_textView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#fff7f8ff" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/comment_back_imageButton"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/back"
            android:background="@null" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout3"
        android:background="@drawable/bottom">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/home_commentimageButton"
            android:src="@drawable/home_bottom"
            android:background="@null"
            android:layout_weight="0.25" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/camera_commentimageButton"
            android:src="@drawable/product"
            android:background="@null"
            android:layout_weight="0.25" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/alert_commentimageButton"
            android:src="@drawable/bell"
            android:background="@null"
            android:layout_weight="0.25" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/profile_commentimageButton"
            android:src="@drawable/profile"
            android:background="@null"
            android:layout_weight="0.25" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout3"
        android:layout_below="@+id/linearLayout4"
        android:layout_above="@+id/linearLayout3">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/comment_listView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/relativeLayout15">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/comment_editText"
            android:layout_weight="1"
            android:singleLine="true"
            android:hint="Comment"
            android:textColor="#ffafafaf"
            android:background="@drawable/line"
            android:paddingLeft="15dp"
            android:inputType="textCapSentences" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout"
        android:id="@+id/relativeLayout15">


        <com.github.siyamed.shapeimageview.RoundedImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/product_commentimageView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            app:siBorderWidth="1dp"
            app:siBorderColor="#ff847a7f"
            app:siRadius="2dp"
            />

    </RelativeLayout>

</RelativeLayout>
