<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavouritsActivity">


        <it.neokree.materialtabs.MaterialTabHost
            android:id="@+id/tabHost"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            app:primaryColor="#ff2b999c"
            app:accentColor="#fffdff0f"
            android:layout_below="@+id/relativeLayout12" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout6"
            android:layout_below="@+id/tabHost" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout6"
            android:background="@drawable/bottom">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/home_fav_imageButton"

                android:src="@drawable/home_bottom"
                android:background="@null"
                android:layout_weight="0.3" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/camera_fav_imageButton"

                android:background="@null"
                android:src="@drawable/product"
                android:layout_weight="0.3" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/alert_favimagebutton"

                android:background="@null"
                android:src="@drawable/bell"
                android:layout_weight="0.3" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageButton"
                android:layout_weight="0.3"
                android:src="@drawable/profile"
                android:background="@null" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#ff2b999c"
            android:id="@+id/relativeLayout11">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/setting_imageButton"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:src="@drawable/profile_edite"
                android:scaleType="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Profile"
                android:id="@+id/fave_title_textView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#fff7f8ff" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/relativeLayout11"
            android:background="#ffffffff"
            android:id="@+id/relativeLayout12">




            <com.pkmmte.view.CircularImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/userphoto_details_imageView"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/information"
                app:border="true"
                app:border_color="#EEEEEE"
                app:border_width="2dp"
                app:shadow="true"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/username_favtextView"
                android:textColor="#e3796d6e"
                android:textSize="20dp"
                android:layout_above="@+id/post_favtextView"
                android:layout_alignLeft="@+id/post_favtextView"
                android:layout_alignStart="@+id/post_favtextView"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/post_favtextView"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/userphoto_details_imageView"
                android:layout_toEndOf="@+id/userphoto_details_imageView"
                android:layout_marginLeft="30dp"
                android:textColor="#e3796d6e"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/favour_favtextView"
                android:layout_below="@+id/post_favtextView"
                android:layout_toRightOf="@+id/userphoto_details_imageView"
                android:layout_toEndOf="@+id/userphoto_details_imageView"
                android:layout_marginLeft="30dp"
                android:textColor="#e3796d6e"
                android:textSize="15dp" />

        </RelativeLayout>

    </RelativeLayout>


