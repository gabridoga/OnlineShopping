<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fonnditt.mobile_perfect.founditt.LoginActivity"
    android:background="@drawable/loginbackground">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="189dp"
        android:id="@+id/linearLayout9">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/username_logineditText"
            android:layout_weight="1"
            android:background="@drawable/username"
            android:singleLine="true"
            android:paddingLeft="40dp"
            android:hint="Tomassoft1229" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/linearLayout9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/password_logineditText"
            android:layout_weight="1"
            android:background="@drawable/password"
            android:singleLine="true"
            android:password="true"
            android:paddingLeft="40dp"
            android:hint="password" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_loginimageButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:src="@drawable/loginbut"
        android:background="@null" />
</RelativeLayout>

