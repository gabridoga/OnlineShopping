<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/loinwith_background">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/already_imageButton"
        android:src="@drawable/allready_account"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/twiter_imageButton"
        android:layout_alignStart="@+id/twiter_imageButton"
        android:layout_marginBottom="50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twiter_imageButton"
        android:background="@null"
        android:src="@drawable/facebook_login"
        android:layout_above="@+id/already_imageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_account_imageButton"
        android:src="@drawable/createaccount_but"
        android:background="@null"
        android:layout_above="@+id/twiter_imageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />

</RelativeLayout>
