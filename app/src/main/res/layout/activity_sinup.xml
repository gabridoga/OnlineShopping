<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mobile_perfect.founditt_ui.SinupActivity"
    android:background="@drawable/loginbackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginBottom="100dp"
        android:id="@+id/linearLayout16"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/linearLayout18"
        android:layout_alignStart="@+id/linearLayout18"
        android:layout_marginRight="50dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/password_signeditText"
            android:layout_weight="1"
            android:background="@drawable/password"
            android:singleLine="true"
            android:password="true"
            android:paddingLeft="40dp"
            android:hint="Password" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/linearLayout16"
        android:id="@+id/linearLayout17"
        android:layout_alignLeft="@+id/linearLayout16"
        android:layout_alignStart="@+id/linearLayout16"
        android:layout_alignRight="@+id/linearLayout18"
        android:layout_alignEnd="@+id/linearLayout18">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/username_signeditText"
            android:layout_weight="1"
            android:background="@drawable/username"
            android:singleLine="true"
            android:paddingLeft="40dp"
            android:hint="Username" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_above="@+id/linearLayout17"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/linearLayout18">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mail_signeditText"
            android:layout_weight="1"
            android:singleLine="true"
            android:background="@drawable/email"
            android:paddingLeft="40dp"
            android:inputType="textEmailAddress"
            android:hint="Enter email" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:src="@drawable/createaccount_but"
        android:background="@null" />
</RelativeLayout>
