<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.github.siyamed.shapeimageview.RoundedImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/user_alertimageView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/man"
        app:siBorderWidth="1dp"
        app:siBorderColor="#ff847a7f"
        app:siRadius="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/product_alertimageView"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/information"
        app:siBorderWidth="1dp"
        app:siBorderColor="#ff888181"
        app:siRadius="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/username_alerttextView"
        android:layout_alignBottom="@+id/user_alertimageView"
        android:layout_toRightOf="@+id/user_alertimageView"
        android:layout_toEndOf="@+id/user_alertimageView"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/time_alertextView"
        android:layout_alignBottom="@+id/username_alerttextView"
        android:layout_toLeftOf="@+id/product_alertimageView"
        android:layout_toStartOf="@+id/product_alertimageView"
        android:textSize="12dp"
        android:textColor="#b6515259"
        android:layout_marginRight="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:layout_alignBottom="@+id/user_alertimageView"
        android:layout_toLeftOf="@+id/time_alertextView"
        android:layout_toStartOf="@+id/time_alertextView"
        android:layout_marginBottom="23dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/clock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/commet_alerttextView"
        android:layout_alignBottom="@+id/user_alertimageView"
        android:layout_toRightOf="@+id/user_alertimageView"
        android:layout_toLeftOf="@+id/product_alertimageView"
        android:layout_toStartOf="@+id/product_alertimageView"
        android:textSize="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="50dp"
        android:gravity="top" />

</RelativeLayout>
